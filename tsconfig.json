{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2015",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "exclude": ["__test__", "lib"]
}
