{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2015",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": ["node_modules", "__test__"]
}
